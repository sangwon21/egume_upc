 
* {
  box-sizing: border-box;
  margin: 0;
}

body {
  margin: 0;
}

.topnavi {
	background-color: #30BBBB;
	top: 0;
  	left:0;
}

#topnav ul {
  list-style-type: none;
  margin: 0;
  padding: 0;
  overflow: hidden;
  background-color: #30BBBB;
  position: static;
  width: 100%;
  z-index:1;
}

#topnav li {
  width:100px;
  float: left;
  font-weight:800;
}

#topnav li a {
  display: block;
  color: #f2f2f2;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
}

#topnav li a:hover:not(.active) {
  background-color: #ddd;
  color: black;
  height: 54px;
  text-decoration: none;
}

#topnav .active{
  background-color: #ddd ; 
  text-decoration: none !important;
  color: black !important;
  height: 54px;
}

